{
  "milestone_operations": {
    "description": "Sample requests for milestone operations API",
    "base_url": "http://localhost:8080/rest/milestones",
    "auth_header": "Authorization: Bearer {firebase_token}",

    "create_milestone": {
      "method": "POST",
      "url": "/rest/milestones",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {firebase_token}"
      },
      "body": {
        "title": "My Wedding Day",
        "description": "The most beautiful day of my life",
        "category": "Got married",
        "milestoneDate": "2024-06-15",
        "location": "Paris, France",
        "tags": ["Wedding", "Anniversary", "Travel"],
        "occasion": "Wedding Ceremony",
        "notes": "Everything was perfect, from the ceremony to the reception. The weather was amazing and all our loved ones were there.",
        "isPrivate": false,
        "metadata": {
          "weather": "sunny",
          "guests": 150,
          "venue": "Château de Versailles"
        }
      }
    },

    "create_milestone_minimal": {
      "method": "POST",
      "url": "/rest/milestones",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {firebase_token}"
      },
      "body": {
        "title": "First Travel",
        "category": "First Travel",
        "milestoneDate": "2024-03-20"
      }
    },

    "get_all_milestones": {
      "method": "GET",
      "url": "/rest/milestones",
      "headers": {
        "Authorization": "Bearer {firebase_token}"
      }
    },

    "get_milestones_with_filters": {
      "method": "GET",
      "url": "/rest/milestones?category=Got married&tags=Wedding&limit=10&offset=0&sortBy=milestoneDate&sortOrder=DESC",
      "headers": {
        "Authorization": "Bearer {firebase_token}"
      }
    },

    "get_milestone_by_id": {
      "method": "GET",
      "url": "/rest/milestones/{milestone_id}",
      "headers": {
        "Authorization": "Bearer {firebase_token}"
      }
    },

    "update_milestone": {
      "method": "PUT",
      "url": "/rest/milestones/{milestone_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {firebase_token}"
      },
      "body": {
        "title": "My Amazing Wedding Day",
        "description": "The most beautiful and perfect day of my life",
        "location": "Château de Versailles, France",
        "notes": "Updated: Everything was absolutely perfect! The ceremony was magical and the reception was unforgettable."
      }
    },

    "delete_milestone": {
      "method": "DELETE",
      "url": "/rest/milestones/{milestone_id}",
      "headers": {
        "Authorization": "Bearer {firebase_token}"
      }
    },

    "get_milestone_stats": {
      "method": "GET",
      "url": "/rest/milestones/stats/overview",
      "headers": {
        "Authorization": "Bearer {firebase_token}"
      }
    },

    "get_categories": {
      "method": "GET",
      "url": "/rest/milestones/categories/list",
      "headers": {
        "Authorization": "Bearer {firebase_token}"
      }
    },

    "get_tags": {
      "method": "GET",
      "url": "/rest/milestones/tags/list",
      "headers": {
        "Authorization": "Bearer {firebase_token}"
      }
    },

    "get_upcoming_milestones": {
      "method": "GET",
      "url": "/rest/milestones/search/upcoming?days=30",
      "headers": {
        "Authorization": "Bearer {firebase_token}"
      }
    },

    "get_recent_milestones": {
      "method": "GET",
      "url": "/rest/milestones/search/recent?days=30",
      "headers": {
        "Authorization": "Bearer {firebase_token}"
      }
    },

    "search_milestones": {
      "method": "GET",
      "url": "/rest/milestones/search/query?q=wedding&limit=20",
      "headers": {
        "Authorization": "Bearer {firebase_token}"
      }
    }
  },

