{
  "openapi": "3.0.0",
  "info": {
    "title": "Attachment Analyser API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/v1/analyse": {
      "post": {
        "summary": "Analyse an attachment and extract plain text",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "attachment": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully extracted plain text",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "text": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request (e.g., no file uploaded, unsupported file type)"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
