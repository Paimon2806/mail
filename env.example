# ==============================================
# PREPR VAULT - Environment Configuration
# ==============================================
# Copy this file to .env.local and fill in your values
# ==============================================

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
PORT=8083
HOST=localhost

# Application URL (for CORS and redirects)
APP_URL=http://localhost:8083
FRONTEND_URL=http://localhost:3000

# ==============================================
# DATABASE CONFIGURATION (MySQL)
# ==============================================
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=prepr_vault_db
DATABASE_USER_NAME=root
DATABASE_PASSWORD=your_mysql_password

# Database Connection Pool Settings
DATABASE_CONNECTION_LIMIT=10
DATABASE_TIMEOUT=60000

# ==============================================
# FIREBASE CONFIGURATION
# ==============================================
# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Private Key Here\n-----END PRIVATE KEY-----"

# Firebase Web Config (if needed)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# ==============================================
# AWS S3 / MinIO CONFIGURATION
# ==============================================
# For AWS S3 (production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# MinIO Configuration (for local development/testing)
# Set S3_ENDPOINT for MinIO, leave empty for AWS S3
S3_ENDPOINT=http://localhost:9000
S3_FORCE_PATH_STYLE=true
S3_BUCKET_NAME=test-bucket

# MinIO Admin Credentials (for testing)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# ==============================================
# SECURITY SETTINGS
# ==============================================
# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Secret
SESSION_SECRET=your-session-secret-key

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Prepr Vault
SMTP_FROM_EMAIL=noreply@prepr-vault.com

# ==============================================
# FILE UPLOAD SETTINGS
# ==============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ==============================================
# DEVELOPMENT/TESTING
# ==============================================
# Set to true to enable debug mode
DEBUG=false

# Test database (if different from main)
TEST_DATABASE_NAME=prepr_vault_test_db

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private-key.pem

# Redis Configuration (if using caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# ==============================================
# API KEYS (Third-party services)
# ==============================================
# Add any third-party API keys here
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google APIs (if needed)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Hugging Face API for Zero-Shot Classification
HUGGING_FACE_API_URL=https://api-inference.huggingface.co/models/facebook/bart-large-mnli
HUGGING_FACE_API_KEY=